<UserControl x:Class="ElyseGUI.Views.StoryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    
    <Grid >
        <TextBox Style="{StaticResource placeHolder}" Tag="{StaticResource storyBoxPlaceholder}" 
                 Background="#ffffff" Foreground="#ffffff" Margin="0" TextWrapping="Wrap" 
                 Text="{Binding story.text, UpdateSourceTrigger=PropertyChanged}" FontFamily="Segoe UI Semibold" FontWeight="Bold" 
                 FontSize="18" AcceptsReturn="True" Padding="10">
        </TextBox>
    </Grid>
</UserControl>
