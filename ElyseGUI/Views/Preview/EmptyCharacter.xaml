<UserControl x:Class="ElyseGUI.Views.Preview.EmptyCharacter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Preview="clr-namespace:ElyseGUI.Views.Preview"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenProfileCommand,
         RelativeSource={RelativeSource AncestorType=WrapPanel}}" CommandParameter="{Binding}" />
        </Grid.InputBindings>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextAlignment="Center"  Text="" FontWeight="Bold" FontSize="20"/>

        <Image Grid.Row="1" Grid.RowSpan="2" Source="/ElyseGUI;component/Images/empty_character.png" />

    </Grid>
</UserControl>
